{
    "name": "@ring-planner/api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "pnpm prisma:generate && tsc && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external --external:@prisma/client --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
        "start": "node dist/index.js",
        "type-check": "tsc --noEmit",
        "lint": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "prisma:migrate": "prisma migrate dev",
        "prisma:seed": "prisma db seed",
        "prisma:studio": "prisma studio",
        "prisma:generate": "prisma generate"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^6.3.0",
        "@ring-planner/shared": "workspace:*",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^17.3.1",
        "express": "^4.21.0",
        "express-rate-limit": "^7.5.1",
        "helmet": "^8.0.0",
        "hpp": "^0.2.3",
        "ioredis": "^5.9.3",
        "jose": "^6.1.3",
        "morgan": "^1.10.1",
        "rate-limit-redis": "^4.3.1",
        "winston": "^3.19.0",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/hpp": "^0.2.7",
        "@types/morgan": "^1.9.10",
        "esbuild": "^0.27.3",
        "prisma": "^6.3.0",
        "tsx": "^4.19.0",
        "typescript": "^5.7.0",
        "vitest": "^3.0.0"
    }
}