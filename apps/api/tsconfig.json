{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@ring-planner/shared": [
                "../../packages/shared/src/index.ts"
            ],
            "@ring-planner/shared/*": [
                "../../packages/shared/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}